<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_new_fir_bg"
    android:padding="16dp">

    <LinearLayout
        android:id="@+id/main"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginBottom="18dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/filefir"
                android:layout_marginEnd="8dp"
                app:tint="@color/accentSaffron">

            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="EDIT FIR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/accentSaffron" />


        </LinearLayout>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            app:boxStrokeWidth="2dp"
            android:layout_marginBottom="12dp"
            android:hint=""/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crime Type"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxStrokeColor="@color/surface"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginBottom="12dp"
            android:hint="">
            <AutoCompleteTextView
                android:id="@+id/crimeTypeAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:drawablePadding="5dp"
                android:inputType="text"
                android:textColor="@color/textPrimary"
                android:popupBackground="@color/surfaceLight"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Act Category"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginBottom="12dp"
            android:hint="">
            <TextView
                android:id="@+id/actCategoryAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="18sp"
                android:background="@drawable/spinner_bg_dashboard"
                android:textColor="@color/textPrimary"
                android:popupBackground="@color/surfaceLight" />
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IPC Sections"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginBottom="12dp"
            android:hint="">
            <AutoCompleteTextView
                android:id="@+id/ipcSectionsAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/spinner_bg_dashboard"
                android:textColor="@color/textPrimary"
                android:popupBackground="@color/surfaceLight"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:text="Zone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:layout_marginBottom="4dp"/>

        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxStrokeColor="@color/surface"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginBottom="12dp"
            android:hint="">

            <AutoCompleteTextView
                android:id="@+id/zoneAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:inputType="text"
                android:textColor="@color/textPrimary"
                android:popupBackground="@color/surfaceLight"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>
        <Spinner
            android:id="@+id/statusSpinner"
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:spinnerMode="dropdown"
            android:background="@drawable/spinner_bg_dashboard"
            android:popupBackground="@color/surfaceLight"
            android:layout_marginBottom="12dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reporting Station"
            android:textSize="18sp"
            android:textColor="@color/textPrimary"
            android:layout_marginBottom="4dp"/>
        <com.google.android.material.textfield.TextInputLayout
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="@color/surfaceLight"
            app:boxCornerRadiusTopStart="12dp"
            app:boxCornerRadiusTopEnd="12dp"
            app:boxCornerRadiusBottomStart="12dp"
            app:boxCornerRadiusBottomEnd="12dp"
            android:layout_marginBottom="24dp"
            android:hint="">
            <AutoCompleteTextView
                android:id="@+id/reportingStationAuto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:background="@drawable/spinner_bg_dashboard"
                android:textColor="@color/textPrimary"
                android:popupBackground="@color/surfaceLight" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmitFIR"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Update FIR"
            android:backgroundTint="@color/primary"
            android:textColor="@color/textPrimary"
            app:cornerRadius="12dp"
            android:padding="10dp"
            android:textStyle="bold" />
    </LinearLayout>
</ScrollView>
