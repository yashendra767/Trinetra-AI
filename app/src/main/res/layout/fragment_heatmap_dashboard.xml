<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottom_fragments.HeatmapDashboard">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:src="@drawable/pin_map"
                    android:layout_gravity="center">

                </ImageView>

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Delhi, India"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:layout_marginStart="5dp"
                    android:textColor="@color/textPrimary">
                </TextView>

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_gravity="center"
                    android:src="@drawable/map">
                </ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.8"
                            >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Active FIRs"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="4dp"
                            android:textColor="@color/textPrimary"
                            android:textSize="18sp">
                        </TextView>
                        <TextView
                            android:id="@+id/tVActiveFir"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/accentGold">
                        </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            >
                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/firs"
                            app:tint="@color/textPrimary">
                        </ImageView>
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="0.8"
                        >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Hotspots"
                            android:layout_marginTop="4dp"
                            android:layout_marginBottom="4dp"
                            android:layout_marginLeft="4dp"
                            android:textSize="18sp"
                            android:textColor="@color/textPrimary">

                        </TextView>
                        <TextView
                            android:id="@+id/tVHotspots"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Loading..."
                            android:layout_marginLeft="4dp"
                            android:layout_marginBottom="4dp"
                            android:textSize="16sp"
                            android:textColor="@color/accentGold">
                        </TextView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_weight="0.2"
                        >

                        <ImageView
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/hotspot"
                            app:tint="@color/textPrimary">
                        </ImageView>
                    </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Map Filter"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_weight="1"
                            android:textColor="@color/accentSaffron">
                        </TextView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crime Type"
                        android:textSize="15sp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/textSecondary">
                    </TextView>

                    <Spinner
                        android:id="@+id/crimeTypeSpinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:background="@drawable/spinner_bg_dashboard"
                        android:padding="8dp">
                    </Spinner>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="10dp">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Date Range"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/textSecondary">
                            </TextView>

                            <Spinner
                                android:id="@+id/dateRangeSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/spinner_bg_dashboard"
                                android:padding="8dp">
                            </Spinner>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="8dp"
                            android:layout_weight="1">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Time Period"
                                android:textSize="15sp"
                                android:layout_marginTop="10dp"
                                android:textColor="@color/textSecondary">
                            </TextView>
                            <Spinner
                                android:id="@+id/timePeriodSpinner"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginStart="8dp"
                                android:background="@drawable/spinner_bg_dashboard"
                                android:layout_weight="1"
                                android:padding="8dp">
                            </Spinner>
                        </LinearLayout>
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnApplyFilter"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:text="Apply Filter"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/primary">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="4dp"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="4dp"
                        >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/accentSaffron"
                            android:text="Crime Hotspot Map" />

                        <androidx.appcompat.widget.SwitchCompat
                            android:id="@+id/markerToggle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="12dp"
                            app:trackTint="@color/surfaceLight"
                            app:thumbTint="@color/thumb_color_selector"
                            android:checked="false" />
                        <ImageView
                            android:id="@+id/ExpandMapHotspot"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/expand"
                            app:tint="@color/textPrimary" />
                    </LinearLayout>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight"/>

                    <FrameLayout
                        android:id="@+id/mapContainer"
                        android:layout_width="match_parent"
                        android:layout_height="320dp"
                        android:layout_marginTop="0dp">

                        <androidx.fragment.app.FragmentContainerView
                            android:id="@+id/map_fragment"
                            class="com.google.android.gms.maps.SupportMapFragment"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|left"
                            android:layout_margin="12dp"
                            android:orientation="horizontal"
                            android:background="@drawable/rounded_bg"
                            android:padding="8dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Crime rate: "
                                android:textColor="@color/textPrimary"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:backgroundTint="@color/lowMedium"
                                android:background="@drawable/rate_box"/>
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="L"
                                android:textColor="@color/textPrimary"
                                android:layout_marginStart="4dp" />
                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/medium"
                                android:background="@drawable/rate_box" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="M"
                                android:textColor="@color/textPrimary"
                                android:layout_marginStart="4dp" />

                            <View
                                android:layout_width="12dp"
                                android:layout_height="12dp"
                                android:layout_marginStart="8dp"
                                android:layout_gravity="center"
                                android:backgroundTint="@color/highSeverity"
                                android:background="@drawable/rate_box" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="H"
                                android:textColor="@color/textPrimary"
                                android:layout_marginStart="4dp" />
                        </LinearLayout>
                    </FrameLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/accentSaffron"
                        android:text="Hotspot Zones List" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight"/>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hp_card1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/hp_Zone1"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone 15 Karol Bagh"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>

                            <TextView
                                android:id="@+id/hp_Zone1Cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="25 Cases"
                                android:textColor="@color/textPrimary"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/hp_card2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/hp_Zone2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone 1 Lakshmi Nagar"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>

                            <TextView
                                android:id="@+id/hp_Zone2Cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="21 Cases"
                                android:textColor="@color/textPrimary"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllZones"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="View All Zones"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/primary">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                app:cardBackgroundColor="@color/surface"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:paddingTop="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="4dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recent Cases"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/accentSaffron">
                    </TextView>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/case1_FIRid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FIR#8001"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>

                            <TextView
                                android:id="@+id/case1_AreaZone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone 15 Karol Bagh"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case1_Crime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Theft"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case1_Timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025-06-16 22:06 PM"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/case2_FIRid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FIR#8002"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>

                            <TextView
                                android:id="@+id/case2_AreaZone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone 2 Saket"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case2_Crime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Snatching"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case2_Timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025-06-16 22:06 PM"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/case3_FIRid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="FIR#8003"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>

                            <TextView
                                android:id="@+id/case3_AreaZone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Zone 7 Rohini"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case3_Crime"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Murder"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>
                            <TextView
                                android:id="@+id/case3_Timestamp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2025-06-16 22:06 PM"
                                android:textColor="@color/textSecondary"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllFirs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="View All FIRs"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/primary">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</FrameLayout>