<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bottom_fragments.WomenSafety">

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical"
            android:background="@color/background">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Women Safety"
                    android:textSize="20sp"
                    android:layout_weight="1"
                    android:textColor="@color/textPrimary">
                </TextView>

                <ImageView
                    android:id="@+id/alertWomen"
                    android:layout_width="26dp"
                    android:layout_height="29dp"
                    android:layout_gravity="center"
                    android:src="@drawable/alertwomen"></ImageView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="16dp">
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_weight="1">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp"
                        >

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.8"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Active FIRs"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:textColor="@color/textPrimary"
                                android:textSize="18sp">
                            </TextView>
                            <TextView
                                android:id="@+id/tVActiveFirWomen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="4dp"
                                android:textSize="16sp"
                                android:textColor="@color/accentGold">
                            </TextView>
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            >
                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/firs"
                                app:tint="@color/textPrimary">
                            </ImageView>
                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="5dp"
                    android:layout_marginStart="8dp"
                    android:layout_weight="1">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="0.8"
                            >

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Risk Zone"
                                android:layout_marginTop="4dp"
                                android:layout_marginBottom="4dp"
                                android:layout_marginLeft="4dp"
                                android:textSize="18sp"
                                android:textColor="@color/textPrimary">

                            </TextView>
                            <TextView
                                android:id="@+id/tVHighRiskZoneWomen"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:layout_marginLeft="4dp"
                                android:layout_marginBottom="4dp"
                                android:textSize="16sp"
                                android:textColor="@color/accentGold">
                            </TextView>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:layout_weight="0.2"
                            >

                            <ImageView
                                android:layout_width="26dp"
                                android:layout_height="26dp"
                                android:src="@drawable/hotspot"
                                app:tint="@color/textPrimary">
                            </ImageView>
                        </LinearLayout>
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardBackgroundColor="@color/surface"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                   >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="12dp"
                        android:paddingTop="12dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Crime Intensity Matrix"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="2dp"
                        android:layout_weight="1"
                        android:textColor="@color/accentSaffron">
                    </TextView>
                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight">
                    </View>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginTop="12dp"
                        android:paddingBottom="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginHorizontal="12dp"
                        android:layout_gravity="center_horizontal">

                        <GridLayout
                            android:id="@+id/crimeIntensityGrid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:useDefaultMargins="true"
                            android:columnCount="6"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Fir Count : Zone"
                        android:layout_gravity="end"
                        android:textSize="18sp"
                        android:layout_marginRight="12dp"
                        android:layout_marginBottom="8dp"
                        android:textColor="@color/textSecondary"/>

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/accentSaffron"
                            android:text="High Risk Zones" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/zoneName_1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:text="Loading..."
                                android:layout_weight="1"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>

                            <TextView
                                android:id="@+id/zone1_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="....."
                                android:textColor="@color/accentGold"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>
                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/zoneName_2"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No data..."
                                android:layout_weight="1"
                                android:textColor="@color/textPrimary"
                                android:textSize="16sp">
                            </TextView>

                            <TextView
                                android:id="@+id/zone2_cases"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="......"
                                android:textColor="@color/accentGold"
                                android:textSize="14sp">
                            </TextView>
                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>


                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllRiskZoneWomen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="View All Zones"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/primary">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="6dp"
                app:cardCornerRadius="12dp"
                android:layout_marginTop="12dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingTop="12dp"
                        android:paddingHorizontal="12dp"
                        android:paddingBottom="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/accentSaffron"
                            android:text="Patrol Routes" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="4dp"
                        android:background="@color/surfaceLight"/>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="vertical"
                                android:layout_weight="1">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#WPR1"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="14sp">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Zone 3,5,4,1"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="16sp">
                                </TextView>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/track"
                                app:tint="@color/textPrimary">
                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#WPR2"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="14sp">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Zone 3,7,2,5"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="16sp">
                                </TextView>
                            </LinearLayout>

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_gravity="center"
                                android:src="@drawable/track"
                                app:tint="@color/textPrimary">
                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/surfaceLight"
                        app:cardCornerRadius="12dp"
                        android:layout_marginTop="8dp"
                        android:layout_marginHorizontal="10dp"
                        app:cardElevation="5dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="12dp">

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="#WPR3"
                                    android:textColor="@color/textSecondary"
                                    android:textSize="14sp">
                                </TextView>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Zone 4,7,1,8"
                                    android:textColor="@color/textPrimary"
                                    android:textSize="16sp">
                                </TextView>
                            </LinearLayout>

                            <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_gravity="center"
                            android:src="@drawable/track"
                            app:tint="@color/textPrimary">
                            </ImageView>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnViewAllRoutesWomen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginHorizontal="10dp"
                        android:text="View All Routes"
                        android:textColor="@color/textPrimary"
                        android:textStyle="bold"
                        app:cornerRadius="12dp"
                        android:backgroundTint="@color/primary">
                    </com.google.android.material.button.MaterialButton>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>


</FrameLayout>