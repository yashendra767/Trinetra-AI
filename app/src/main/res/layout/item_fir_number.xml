<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    android:layout_marginTop="12dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/surface"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row: FIR ID + Menu -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/FIRidTV1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="FIR#0005"
                android:textColor="@color/textSecondary"
                android:textSize="15sp"
                android:textStyle="bold" />


        </LinearLayout>

        <!-- Crime Type -->
        <TextView
            android:id="@+id/crimeTypeTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Visa Fraud"
            android:textColor="@color/textPrimary"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginTop="6dp" />

        <!-- Zone -->
        <TextView
            android:id="@+id/areaZoneTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rohini - Zone 51"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/baseline_location_on_24"
            app:drawableTint="@color/highSeverity"
            android:layout_marginTop="8dp" />

        <!-- Timestamp -->
        <TextView
            android:id="@+id/timestampTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2024-11-21T17:14:35"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/outline_calendar_clock_24"
            app:drawableTint="@color/textSecondary"
            android:layout_marginTop="4dp" />

        <!-- Reporting Station -->
        <TextView
            android:id="@+id/reportingStationTV1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anand Vihar PS"
            android:textColor="@color/textSecondary"
            android:textSize="14sp"
            android:drawablePadding="6dp"
            app:drawableStartCompat="@drawable/police3station"
            app:drawableTint="@color/cyberBlue"
            android:layout_marginTop="4dp" />

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/surfaceLight"
            android:layout_marginTop="12dp"
            android:alpha="0.6" />

        <!-- Bottom Action Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <!-- Predict Text -->
            <TextView
                android:id="@+id/firPredictTV1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Predict"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/cyberBlue"
                android:backgroundTint="@color/surfaceLight"
                android:paddingHorizontal="18dp"
                android:paddingVertical="6dp"
                android:background="@drawable/rate_box"
                android:layout_marginEnd="8dp" />

            <!-- View Details -->
            <TextView
                android:id="@+id/viewDetailsTV1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="View Details"
                android:textColor="@color/textPrimary"
                android:textSize="15sp"
                android:gravity="end"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
