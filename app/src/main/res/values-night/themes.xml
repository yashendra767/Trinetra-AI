<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TrinetraAI" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">#1A237E</item>
        <item name="colorOnPrimary">@color/white</item>

        <!-- Secondary color -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">#018786</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Background and surfaces -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/textPrimary</item>

        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>

        <!-- Alert/danger/warning colors -->
        <item name="colorError">@color/alerts</item>
        <item name="colorOnError">@color/white</item>

        <!-- For buttons, inputs, etc. -->
        <item name="colorControlNormal">@color/textSecondary</item>
        <item name="colorControlActivated">@color/primary</item>
        <item name="colorAccent">@color/cyberBlue</item>

        <!-- Optional Typography -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="fontFamily">@font/inter</item>

        <item name="android:windowOptOutEdgeToEdgeEnforcement" tools:targetApi="35">true</item>
        <item name="android:statusBarColor">@color/surface</item>

    </style>

    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="RoundedDialog" parent="Theme.Material3.Dark.Dialog.Alert">
        <item name="android:background">@drawable/dialog_background</item>
    </style>
</resources>